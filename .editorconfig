root = true

[**]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[**.{json,md}]
indent_style = space
indent_size = 4

[**.{css,html,js,scss,vue}]
indent_style = space
indent_size = 2

[{.babelrc,package.json}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
